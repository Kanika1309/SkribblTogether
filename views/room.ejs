                  <tbody id="room">
                    <tr>
                      <% for(var i=0; i<rooms.length; i++) { %>
                        <th scope="row"><%=i+1%></th>
                        <td><%=rooms[i].roomName%></td>
                        <td><a href="/api/joinRoom/<%=rooms[i].id%>/<%=rooms[i].teams[0].id%>/<%=userId%>">
