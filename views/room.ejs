        .rooms {
            border: 0.2px solid black;
            border-width: 4px;
            border-radius: 3px;
            width: 94%;
            margin-left: 3%;
            margin-top: 4%;
            height: 500px;
            background-color:lightsteelblue;
        }
        .rooms #roomHead{
            border: 0.2px solid black;
            border-width: 4px;
            border-radius: 3px;
            position: relative;
            width: 92%;
            margin-left: 4%;
            margin-top: 4%;
        }
        .rooms #head{
            height: 35px;
            background-color: blueviolet;
            font-size: larger;
            font-weight: bolder;
        }
        .rooms #room{
            border: 0.2px solid black;
            border-width: 4px;
            border-radius: 3px;
            position: relative;
            height: 70px;
            width: 92%;
            margin-left: 4%;
            background-color: cadetblue;
            font-size: large;
            font-weight: bolder;
        }
        .rooms #team{
            border: 0.2px solid black;
            border-width: 2px;
            background-color:darkgrey;
            font-size:medium;
            font-weight:bold;
        }
    </style>

